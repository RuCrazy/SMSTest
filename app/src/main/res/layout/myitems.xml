<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/custom_border"
    android:clickable="false">

    <TextView
        android:id="@+id/tvName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:text="Name"
        android:textSize="20dp"
        android:textStyle="bold">
    </TextView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvName">

        <TextView
            android:id="@+id/tvSum"
            android:layout_width="wrap_content"
            android:layout_height="22dp"
            android:layout_gravity="right"
            android:layout_marginLeft="20dp"
            android:layout_weight="3"
            android:text="Sum"
            android:textColor="?android:attr/textColorLink"
            android:textSize="17dp"></TextView>
        <View
            android:layout_alignLeft="@+id/tvSMSSum"
            android:layout_height="match_parent"
            android:background="@drawable/custom_separator_vertical"
            android:layout_width="1dp">
        </View>

        <TextView
            android:id="@+id/tvSmsCount"
            android:layout_width="60dp"
            android:layout_height="22dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/tvSMSSum"
            android:layout_gravity="right"
            android:layout_marginRight="20dp"
            android:paddingLeft="3dp"
            android:text="SmsCount"
            android:textColor="?android:attr/textColorHint"
            android:textSize="17dp"></TextView>

    </LinearLayout>
    <View
        android:layout_below="@+id/tvName"
        android:layout_width="wrap_content"
        android:background="@drawable/custom_separator_horizontal"
        android:layout_height="1dp" />

</RelativeLayout>